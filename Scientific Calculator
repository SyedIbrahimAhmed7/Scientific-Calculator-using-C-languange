#include <stdio.h>
#include <math.h>

// Function declarations
void performBasicOperation(int choice);
void performTrigonometricOperation(int choice);

int main() {
    int choice;

    while (1) {
        // Display menu for the combined calculator
        printf("\n Scientific Calculator Menu:\n");
        printf("\n Basic Operations:\n");
        printf("1. Addition\n");
        printf("2. Subtraction\n");
        printf("3. Multiplication\n");
        printf("4. Division\n");
        
        printf("\n Trignometric Operations:\n");
        printf("5. Sine\n");
        printf("6. Cosine\n");
        printf("7. Tangent\n");
        printf("8. Arcsine\n");
        printf("9. Arccosine\n");
        printf("10. Arctangent\n");
        printf("11. Exit\n");

        printf("Enter your choice (1-11): ");
        scanf("%d", &choice);

        if (choice == 11) {
            printf("Exiting the calculator. Goodbye!\n");
            break;
        }

        if (choice >= 1 && choice <= 4) {
            // For basic arithmetic operations
            performBasicOperation(choice);
        } else if (choice >= 5 && choice <= 10) {
            // For trigonometric operations
            performTrigonometricOperation(choice);
        } else {
            printf("Invalid choice. Please enter a number between 1 and 11.\n");
        }
    }

    return 0;
}

// Function to perform basic arithmetic operations
void performBasicOperation(int choice) {
    int n1, n2;
    printf("Enter the first number: ");
    scanf("%d", &n1);
    printf("Enter the second number: ");
    scanf("%d", &n2);

    switch (choice) {
        case 1:
            printf("Addition of %d and %d is: %d\n", n1, n2, n1 + n2);
            break;
        case 2:
            printf("Subtraction of %d and %d is: %d\n", n1, n2, n1 - n2);
            break;
        case 3:
            printf("Multiplication of %d and %d is: %d\n", n1, n2, n1 * n2);
            break;
        case 4:
            if (n2 != 0) {
                printf("Division of %d and %d is: %.2f\n", n1, n2, (float)n1 / n2);
            } else {
                printf("Error: Division by zero.\n");
            }
            break;
    }
}

// Function to perform trigonometric operations
void performTrigonometricOperation(int choice) {
    double angle, result;

    printf("Enter the angle in degrees: ");
    scanf("%lf", &angle);

    double radianAngle = angle * M_PI / 180.0;

    switch (choice) {
        case 5:
            result = sin(radianAngle);
            printf("Sine of %.2lf degrees is %.4lf\n", angle, result);
            break;
        case 6:
            result = cos(radianAngle);
            printf("Cosine of %.2lf degrees is %.4lf\n", angle, result);
            break;
        case 7:
            result = tan(radianAngle);
            printf("Tangent of %.2lf degrees is %.4lf\n", angle, result);
            break;
        case 8:
            result = asin(sin(radianAngle));
            printf("Arcsine of %.2lf degrees is %.4lf\n", angle, result * 180.0 / M_PI);
            break;
        case 9:
            result = acos(cos(radianAngle));
            printf("Arccosine of %.2lf degrees is %.4lf\n", angle, result * 180.0 / M_PI);
            break;
        case 10:
            result = atan(tan(radianAngle));
            printf("Arctangent of %.2lf degrees is %.4lf\n", angle, result * 180.0 / M_PI);
            break;
    }
}
